<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:background="@drawable/timer_input_bg"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_timer_input"
    tools:context="com.example.kfc36_000.napp.TimerInput">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:textSize="50sp"
        android:text="00  :  00  :  00"
        android:textColor="#FFFFFF"
        android:gravity="right"
        android:textAlignment="gravity"
        android:id="@+id/timerText"
        android:layout_marginTop="123dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:textSize="50sp"
        android:text="00  :  00"
        android:textColor="#FFFFFF"
        android:gravity="right"
        android:id="@+id/timeToSleepText"
        android:layout_marginTop="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Input the amount of time you have for sleep"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:id="@+id/textView"
        android:layout_marginTop="320dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/timerText"
        android:layout_alignEnd="@+id/timerText" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/click_timer_input_start"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:adjustViewBounds="true"
        android:layout_marginTop="250dp"
        android:id="@+id/startButton"
        android:layout_below="@+id/timerText"/>

</RelativeLayout>
