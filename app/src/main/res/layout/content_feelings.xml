<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:background="@drawable/feel_background"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_feelings"
    tools:context="com.example.kfc36_000.napp.FeelingsActivity">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="200dp">

            <ImageButton
                android:layout_height="120dp"
                android:layout_width="90dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/onClick_feel_groggy"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_column="1"/>
            <ImageButton
                android:layout_height="120dp"
                android:layout_width="90dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/onClick_feel_refreshed"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <ImageButton
                android:layout_height="120dp"
                android:layout_width="90dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/onClick_feel_disoriented"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_column="1"/>
            <ImageButton
                android:layout_height="120dp"
                android:layout_width="90dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/onClick_feel_better"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_column="2" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
